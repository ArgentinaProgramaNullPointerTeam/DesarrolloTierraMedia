CREATE TABLE "promociones" (
	"idpromociones"	INTEGER NOT NULL UNIQUE,
	"nombre"	TEXT,
	"tipoDePromocion"	TEXT,
	"descuentoAXB"	INTEGER,
	"descuentoPorcentual"	INTEGER,
	"descuentoAbsoluta"	TEXT,
	"tipoAtraccion"	INTEGER,
	"atraccion1"	TEXT,
	"atraccion2"	TEXT,
	"atraccion3"	TEXT,
	PRIMARY KEY("idpromociones" AUTOINCREMENT)
);



