 ('3', 'Sam', '36', '8','Degustacion'), 
 ('4', 'Galandriel', '5', '6','Paisaje'),
 ('5', 'Millonario', '1000', '1000', 'Aventura');



CREATE TABLE "atraccion" (
	"idAtraccion"	INTEGER NOT NULL UNIQUE,
	"nombre"	TEXT NOT NULL UNIQUE,
	"costoVisita"	INTEGER NOT NULL,
	"cupo"	INTEGER NOT NULL,
	"tiempoVisita"	INTEGER NOT NULL,
	"tipoAtraccion"	TEXT,
	PRIMARY KEY("idAtraccion")

