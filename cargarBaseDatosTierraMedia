CREATE TABLE "usuario" (
	"idusuario"	INTEGER,
	"nombre"	TEXT,
	"dineroDisponible"	INTEGER,
	"tiempoDisponible"	INTEGER,
	"tipoatraccion"	TEXT,
	PRIMARY KEY("idusuario")
);


INSERT INTO usuario(idusuario, nombre, dineroDisponible, tiempoDisponible, tipoatraccion) VALUES

